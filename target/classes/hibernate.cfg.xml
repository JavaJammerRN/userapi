<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.password">hotdesk</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3308/hotdesk </property>
        <property name="hibernate.connection.username">hotdesk</property>
        <property name="hiberante.default_schema">hotdesk</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        
        
        <property name="show_sql">true</property>
    	<property name="format_sql">true</property>
    	<property name="hbm2ddl.auto">create-drop</property>
    	
    	<property name="current_session_context_class">thread</property>
		<property name="hibernate.show_sql">true</property>
        
        <mapping resource="User.hbm.xml"/>
    </session-factory>
</hibernate-configuration>
